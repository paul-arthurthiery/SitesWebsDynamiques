script(type='text/javascript' src='./assets/js/jquery.validate.min.js')
script(type='text/javascript' src='./assets/js/additional-methods.min.js')
script(type='text/javascript' src='./assets/js/messages_fr.js')
script(type='text/javascript' src='./assets/scripts/utils.js')
script(type='text/javascript' src='./assets/scripts/products.service.js')
script(type='text/javascript' src='./assets/scripts/shopping-cart.service.js')
script(type='text/javascript' src='./assets/scripts/orders.service.js')
script(type='text/javascript' src='./assets/scripts/shopping-cart.controller.js')
script(type='text/javascript' src='./assets/scripts/order.controller.js')
